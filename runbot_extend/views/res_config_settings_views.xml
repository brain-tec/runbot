<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.runbot</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="runbot.res_config_settings_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='runbot_update_frequency']/.." position="after">
                <div class="mt-16 row">
                    <label for="nginx_client_max_body_size" class="col-xs-3 o_light_label" style="width: 60%;"/>
                    <field name="nginx_client_max_body_size" style="width: 30%;"/>
                </div>
              </xpath>
            </field>
        </record>
    </data>
</odoo>
