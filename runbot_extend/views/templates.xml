<odoo>

<template id="build_button" inherit_id="runbot.build_button">
    <xpath expr="//a[@name='quick_signin_reference']" position="replace">
        <a t-if="bu['global_state']=='running' and not bu['real_build'].db_to_restore" t-attf-href="http://{{bu['domain']}}/?db={{bu['real_build'].dest}}-all" class="btn btn-primary" title="Sign in on this build" aria-label="Sign in on this build"><i class="fa fa-sign-in"/></a>
        <a t-if="bu['global_state']=='running' and bu['real_build'].db_to_restore" t-attf-href="http://{{bu['domain']}}/?db={{bu['real_build'].dest}}-custom" class="btn btn-primary" title="Sign in on this build" aria-label="Sign in on this build"><i class="fa fa-sign-in"/></a>
    </xpath>
    <xpath expr="//t[@name='signin_reference_list']" position="inside">
        <li t-if="bu['real_build'].db_to_restore"><a t-attf-href="http://{{bu['domain']}}/?db={{bu['real_build'].dest}}-restored">Connect restored db<i class="fa fa-sign-in"/></a></li>
    </xpath>
</template>
</odoo>
