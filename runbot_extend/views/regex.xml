<odoo>
  <data>
    
    <record id="regex_form" model="ir.ui.view">
        <field name="name">runbot.regex.form</field>
        <field name="model">runbot.regex</field>
        <field name="arch" type="xml">
          <form>
            <header>
            </header>
            <sheet>
              <group name="regex_group">
                <field name="name"/>
                <field name="regex"/>
              </group>
            </sheet>
          </form>
        </field>
    </record>
          
    
    <record id="regex_view_tree" model="ir.ui.view">
        <field name="name">runbot.regex.tree</field>
        <field name="model">runbot.regex</field>
        <field name="arch" type="xml">
            <tree string="Regex">
                <field name="name"/>
                <field name="regex"/>
            </tree>
        </field>
    </record>
    
    <record id="open_view_regex_tree" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">runbot.regex</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        name="Regex" 
        id="runbot_menu_regex_tree"
        parent="runbot.runbot_menu_root"
        sequence="60"
        action="open_view_regex_tree"
        />
          

  </data>
</odoo>