<odoo>
    <record id="runbot_migra_form_project" model="ir.ui.view">
        <field name="name">Migration Project Form</field>
        <field name="model">runbot_migra.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="version_target"/>
                        </group>
                        <group>
                            <field name="versions"/>
                        </group>
                    </group>

                    <separator string="Repositories"/>
                    <field name="server_repo"/>
                    <field name="migration_scripts_repo"/>
                    <field name="addons_repo_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="runbot_migra_action_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">runbot_migra.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Migrabot" id="runbot_migra_root_menu"/>
    <menuitem name="Projects" id="runbot_migra_menu_project"
              parent="runbot_migra_root_menu"
              action="runbot_migra_action_project"/>
</odoo>
